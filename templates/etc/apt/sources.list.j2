{% set boss__tpl_seen_sources = {} %}
{% set boss__tpl_suites = [] %}
{% for boss__tpl_suffix in boss__tpl_macros.flattened(boss__distribution_suffixes) | from_json %}
{%   set _ = boss__tpl_suites.append(boss__distribution_release + boss__tpl_suffix) %}
{% endfor %}
{% set boss__tpl_sources = [] %}
{% for element in boss__combined_sources %}
{%   set boss__tpl_source = {
  "types": [],
  "options": [],
  "uris": [],
  "suites": [],
  "components": [],
  "comments": [],
  "state": "present",
  "architecture": boss__architecture,
  "distribution": boss__distribution,
  "distribution_release": boss__distribution_release
} %}
{%   if element is string %}
{%     set _ = boss__tpl_source.update({ "uris": [ element ]}) %}
{%   elif element is mapping %}
{%     set _ = boss__tpl_source.update({
         "types": boss__tpl_macros.flattened(element.type, element.types) | from_json,
         "options": boss__tpl_macros.flattened(element.option, element.options) | from_json,
         "uris": boss__tpl_macros.flattened(element.uri, element.uris) | from_json,
         "suites": boss__tpl_macros.flattened(element.suite, element.suites) | from_json,
         "components": boss__tpl_macros.flattened(element.component, element.components) | from_json,
         "comments": boss__tpl_macros.flattened(element.comment, element.comments) | from_json,
         "state": element.state|d(boss__tpl_source.state),
         "architecture": element.architecture|d(boss__tpl_source.architecture),
         "distribution": element.distribution|d(boss__tpl_source.distribution),
         "distribution_release": element.distribution_release|d(boss__tpl_source.distribution_release),
      }) %}
{%     if "repo" in element %}
{%       set _ = boss__tpl_source.update({ "repo": element.repo }) %}
{%     endif %}
{%   else %}
{%     set _ = boss__tpl_source.update({ "uris": element }) %}
{%   endif %}
{%   if not boss__tpl_source.types %}
{%     set _ = boss__tpl_source.types.extend(boss__tpl_macros.flattened(boss__source_types) | from_json) %}
{%   endif %}
{%   if not boss__tpl_source.uris %}
{%     if element is mapping %}
{%       if boss__distribution in element.keys() %}
{%         set _ = boss__tpl_source.uris.extend(boss__tpl_macros.flattened(element[boss__distribution]) | from_json) %}
{%       endif %}
{%     endif %}
{%   endif %}
{%   if not boss__tpl_source.suites %}
{%     set _ = boss__tpl_source.suites.extend(boss__tpl_suites) %}
{%   endif %}
{%   if not boss__tpl_source.components %}
{%     set _ = boss__tpl_source.components.extend(boss__tpl_macros.flattened(boss__distribution_components) | from_json) %}
{%   endif %}
{%   set _ = boss__tpl_sources.append(boss__tpl_source) %}
{% endfor %}
{% for entry in boss__tpl_sources %}
